<!--<!DOCTYPE html>-->
<html>
    <head>
      <title>WikiPortal</title>
      <link rel="stylesheet" type="text/css" href="/style/style.css" />
      <link href="https://fonts.googleapis.com/css?family=Fenix" rel="stylesheet">
      <link href="https://fonts.googleapis.com/css?family=Roboto" rel="stylesheet">
      <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
      <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    </head>

    <body>
      <!--Animation credit to Dronca Raul via Ritu Verma-->
        <h1>THE WIKIPORTAL</h1>
        <% if(!hideOrbs) { %>
          <div id="spheres">
            <img id="orb" src="https://upload.wikimedia.org/wikipedia/commons/5/55/Wikipedia_logo_gold.png" alt="globe">
            <div id="orbs">
              <div class="circle circle-1"></div>
              <div class="circle circle-2"></div>
              <div class="circle circle-3"></div>
              <div class="circle circle-4"></div>
              <div class="circle circle-5"></div>
              <div class="circle circle-6"></div>
            </div>
          </div>
        <% } %>  
      <div id="fields">
        <div>
            <form method="POST" action="/search">
              <a id="random" class="buttons" href="https://en.wikipedia.org/wiki/Special:Random" target="_blank">Random Search</a>
              <input type="search" id="search" class="buttons" name="search" placeholder="Search">
              <input type="submit" id="go" value="Go" class="buttons"></input>
            </form>
        </div>
      </div>
      <div id="search-container">
        <% for(var i = 0; i < results.length; i++){ %>
          <a href="<%= results[i].link %>" target="_blank">
             <div id="result-spot" class="box">
               <span><%= results[i].name %></span>
                <%= results[i].blurb %>
                </a>
                <%= results[i].errorMsg %>
             </div>
        <% } %>
      </div>
    </body>
</html>